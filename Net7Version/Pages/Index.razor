@page "/"
@using System.Web
@inject NavigationManager Navigation

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />
<button onclick="@ClickBug">Click for url (not bugging in .NET 7)</button>
<button onclick="@ClickNormal">Click for normalText</button>

@code {
    private void ClickBug()
    {
        var returnUrl = HttpUtility.UrlEncode("https://localhost:5001/authentication/login-callback");
        Navigation.NavigateTo($"/counter/{returnUrl}");
    }

    private void ClickNormal()
    {
        Navigation.NavigateTo($"/counter/text");
    }
}